<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPick_Employye_Packing.QuickPick_Empleyee_Packing_Folder.Views.OrderReceivingPage"
            xmlns:mvvm="clr-namespace:QuickPick_Employye_Packing.QuickPick_Empleyee_Packing_Folder.ViewModels"
             xmlns:vm="clr-namespace:QuickPick_Employye_Packing.QuickPick_Empleyee_Packing_Folder.Models"
             Title="OrderReceivingPage" x:DataType="mvvm:OrdersViewModel" BackgroundColor="WhiteSmoke">
    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Orders From Customers" FontSize="Header" HorizontalOptions="Center"
            FontAttributes="Bold">
                <Label.Shadow>
                    <Shadow Brush="Black"
                 Opacity="0.5"
                 Offset="10,10"
                 Radius="10"/>
                </Label.Shadow>
            </Label>
            <Label Text="Select order to view what has been order" FontSize="20" HorizontalOptions="Center"
            FontAttributes="Bold">
                <Label.Shadow>
                    <Shadow Brush="Black"
                     Opacity="0.5"
                     Offset="10,10"
                     Radius="10"/>
                </Label.Shadow>
            </Label>
            <Border>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Opacity="0.5"
         Brush="Black"
         Offset="10,10"
         Radius="10"/>
                </Border.Shadow>
                <CollectionView ItemsLayout="VerticalGrid,5" SelectionMode="Single"
                                ItemsSource="{Binding Orders}"
                                SelectedItem="{Binding SelectedOrder}"
                                SelectionChangedCommand="{Binding GetSelectedOrderCommand}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:Order">
                            <Border BackgroundColor="White">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Opacity="0.5"
                                        Brush="Black"
                                        Offset="10,10"
                                        Radius="10"/>
                                </Border.Shadow>
                                <StackLayout>
                                    <StackLayout Spacing="15" Padding="5">
                                        <Label Text="{Binding OrderNumber}" FontSize="20" FontAttributes="Bold"/>
                                        <Label Text="{Binding OrderedItemsQty, StringFormat='Item(s) Ordered : {0}'}" FontSize="20"/>
                                    </StackLayout>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>