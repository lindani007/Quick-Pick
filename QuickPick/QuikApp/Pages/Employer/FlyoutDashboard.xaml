<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPick.QuikApp.Pages.Employer.FlyoutDashboard"
            xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             Title="FlyoutDashboard" FlyoutLayoutBehavior="Popover">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu" WidthRequest="400">
            <StackLayout Spacing="10" Padding="10" HorizontalOptions="Start">
                <Label Text="Navigation" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Border WidthRequest="200" HorizontalOptions="Start" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Image Source="homei.webp" HeightRequest="40"/>
                        <Button TextColor="Black" BackgroundColor="White" FontAttributes="Italic" Text="Home" FontSize="20" 
                            WidthRequest="100" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
                <Border WidthRequest="200" StrokeThickness="0" HorizontalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="add.png" HeightRequest="40"/>
                        <Button TextColor="Black" BackgroundColor="White" FontAttributes="Italic" Text="Add Aisle" FontSize="20" 
                            WidthRequest="150" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
                <Border WidthRequest="200" StrokeThickness="0" HorizontalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="add.png" HeightRequest="40"/>
                        <Button TextColor="Black" BackgroundColor="White" FontAttributes="Italic" Text="Add Items" FontSize="20" 
                            WidthRequest="150" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
                <Border WidthRequest="300" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="transaction.webp" HeightRequest="40"/>
                        <Button TextColor="Black" BackgroundColor="White" FontAttributes="Italic" Text="Transactions List" FontSize="20" 
                             WidthRequest="200" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
                <Border WidthRequest="300" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="transaction.webp" HeightRequest="40"/>
                        <Button TextColor="Black" BackgroundColor="White" FontAttributes="Italic" Text="Today's Transactions" FontSize="20" 
                                 WidthRequest="222" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
                <Border WidthRequest="300" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="income.png" HeightRequest="40"/>
                        <Button TextColor="Black" BackgroundColor="White" FontAttributes="Italic" Text="Sales Analysis" FontSize="20" 
                                 WidthRequest="170" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
                <Border WidthRequest="300" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="feedback.jpg" HeightRequest="40"/>
                        <Button TextColor="Black" BackgroundColor="White" FontAttributes="Italic" Text="Feed Back" FontSize="20" 
                  WidthRequest="150" HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage BackgroundColor="WhiteSmoke">
                    <ContentPage.Shadow>
                        <Shadow Brush="Black"
                                Opacity="0.5"
                                Radius="10"
                                Offset="10,10" />
                    </ContentPage.Shadow>
                    <ScrollView>
                        <StackLayout Spacing="15">
                            <Label Text="Your Invertory Break Down" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,40,0,20">
                                    <Label.Shadow>
                                    <Shadow Brush="Black"
                                        Opacity="0.5"
                                        Radius="10"
                                        Offset="10,10" />
                                </Label.Shadow>
                            </Label>
                            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                                <Border BackgroundColor="White" WidthRequest="300">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="15"/>
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="Black"
                                                Opacity="0.5"
                                                Radius="10"
                                                Offset="10,10" />
                                    </Border.Shadow>
                                    <StackLayout Spacing="10" WidthRequest="100" HeightRequest="100"  HorizontalOptions="Center">
                                        <Label Text="Orders Placed" FontSize="20" FontAttributes="Bold"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                        <Label Text="392" FontSize="15" x:Name="totalCost" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                    </StackLayout>
                                </Border>
                                <Border BackgroundColor="White" WidthRequest="300">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="15"/>
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="Black"
                                            Opacity="0.5"
                                            Radius="10"
                                            Offset="10,10" />       
                                    </Border.Shadow>
                                    <StackLayout Spacing="10" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center">
                                        <Label Text="Today's Income" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                        <Label Text=" R0.00" FontSize="15" x:Name="totalIncome" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                    </StackLayout>
                                </Border>
                                <Border BackgroundColor="White" WidthRequest="300">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="15"/>
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="Black"
                                            Opacity="0.5"
                                            Radius="10"
                                            Offset="10,10" />
                                    </Border.Shadow>
                                    <StackLayout Spacing="10" WidthRequest="120" HeightRequest="120" HorizontalOptions="Center">
                                        <Label Text="Items Need To Be Added" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                        <Label Text=" 12" FontSize="15" x:Name="totalProfi" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                    </StackLayout>
                                </Border>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="20" Padding="15" HorizontalOptions="Center">
                                <StackLayout Spacing="15"   Padding="15">
                                    <Border BackgroundColor="White">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="25"/>
                                        </Border.StrokeShape>
                                        <Border.Shadow>
                                        <Shadow Brush="Black"
                                            Opacity="0.5"
                                            Radius="10"
                                            Offset="10,10" />
                                        </Border.Shadow>
                                        <Grid>
                                            <ScrollView>
                                                <StackLayout Spacing="10" Padding="15" WidthRequest="365">
                                                    <Label Text="Items Left Chart" FontAttributes="Bold" FontSize="Header"/>
                                                    <Label Text="Items left in asceding order" FontSize="Subtitle"/>
                                                    <ScrollView Orientation="Horizontal">
                                                        <StackLayout>
                                                            <charts:ChartView x:Name="itemChartView"  HeightRequest="350" WidthRequest="350"/>
                                                        </StackLayout>
                                                    </ScrollView>
                                                    <Label Text="You need to order these : Banana" FontAttributes="Bold" FontSize="Header"/>
                                                </StackLayout>
                                            </ScrollView>
                                        </Grid>
                                    </Border>
                                    <Border BackgroundColor="White">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="25"/>
                                        </Border.StrokeShape>
                                        <Border.Shadow>
                                            <Shadow Brush="Black"
                                                    Opacity="0.5"
                                                    Radius="10"
                                                    Offset="10,10" />
                                        </Border.Shadow>
                                        <Grid>
                                            <StackLayout Spacing="10" Padding="15" WidthRequest="365">
                                                <Label Text="Orders Chart" FontAttributes="Bold" FontSize="Header"/>
                                                <ScrollView Orientation="Horizontal">
                                                    <StackLayout WidthRequest="1000">
                                                        <charts:ChartView x:Name="ordersChartView" WidthRequest="1000" HeightRequest="350"/>
                                                    </StackLayout>
                                                </ScrollView>
                                            </StackLayout>
                                        </Grid>
                                    </Border>
                                </StackLayout >
                                <Border BackgroundColor="White">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="25"/>
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="Black"
                                                Opacity="0.5"
                                                Radius="10"
                                                Offset="10,10" />
                                    </Border.Shadow>
                                    <Grid>
                                        <StackLayout Spacing="10" Padding="15" BackgroundColor="White">
                                            <Picker Title="Display Income As : " WidthRequest="300" HorizontalOptions="Start">
                                                <Picker.Items>
                                                    <x:String>Pie Chart</x:String>
                                                    <x:String>Bar Char</x:String>
                                                    <x:String>Line Chart</x:String>
                                                    <x:String>Half Radial Gauge Chart</x:String>
                                                </Picker.Items>
                                            </Picker>
                                            <Label Text="Income Chart" FontAttributes="Bold" FontSize="Header"/>
                                            <ScrollView Orientation="Horizontal">
                                                <StackLayout>
                                                    <charts:ChartView x:Name="incomeChartView" HeightRequest="700" WidthRequest="900"/>
                                                </StackLayout>
                                            </ScrollView>
                                        </StackLayout>
                                    </Grid>
                                </Border>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </ScrollView>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>