<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPick.QuikApp.Pages.Workers.OrdersPage"
             Title="Orders" BackgroundColor="WhiteSmoke">
    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Orders From Customers" FontSize="Header" HorizontalOptions="Center"
                   FontAttributes="Bold">
                <Label.Shadow>
                    <Shadow Brush="Black"
                        Opacity="0.5"
                        Offset="10,10"
                        Radius="10"/>
                </Label.Shadow>
            </Label>
            <Label Text="Select order to view what has been order" FontSize="20" HorizontalOptions="Center"
                   FontAttributes="Bold">
                <Label.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.5"
                            Offset="10,10"
                            Radius="10"/>
                </Label.Shadow>
            </Label>
            <Border BackgroundColor="White">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Opacity="0.5"
                Brush="Black"
                Offset="10,10"
                Radius="10"/>
                </Border.Shadow>
                <CollectionView ItemsLayout="VerticalGrid,10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label FontSize="20" FontAttributes="Bold"/>
                                <Label FontSize="20"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>