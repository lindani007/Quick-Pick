<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPick.QuikApp.Pages.Workers.PackingPage"
             Title="PackingPage">
    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Product ID" FontSize="Header" FontAttributes="Bold" HorizontalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black"
                        Opacity="0.5"
                        Offset="10,10"
                        Radius="10"/>
                </Label.Shadow>
            </Label>
            <Label Text="Number Of Items" FontSize="Subtitle" FontAttributes="Bold" HorizontalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black"
                        Opacity="0.5"
                        Offset="10,10"
                        Radius="10"/>
                </Label.Shadow>
            </Label>
            <Label Text="Note: Check the checkbox if you have packed the item if you haven't please do not select it" 
                   FontSize="30" TextColor="Red" HorizontalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black"
                        Opacity="0.5"
                        Offset="10,10"
                        Radius="10"/>
                </Label.Shadow>
            </Label>
            <Border BackgroundColor="White">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Opacity="0.5"
                         Brush="Black"
                         Offset="10,10"
                         Radius="10"/>
                </Border.Shadow>
                <CollectionView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <HorizontalStackLayout>
                                    <CheckBox />
                                    <Label FontSize="20"/>
                                </HorizontalStackLayout>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
            <Label Text="Selected Items / Out Of ... Items" FontSize="Subtitle" FontAttributes="Bold" HorizontalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black"
                        Opacity="0.5"
                        Offset="10,10"
                        Radius="10"/>
                </Label.Shadow>
            </Label>
        </StackLayout>
    </ScrollView>
</ContentPage>