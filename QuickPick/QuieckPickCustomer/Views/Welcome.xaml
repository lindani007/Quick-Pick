<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPick.QuieckPickCustomer.Views.Welcome"
             Title="Welcome">
    <ScrollView>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#B2EBF2" Offset="0.0" />
                    <GradientStop Color="#F0F8E6" Offset="0.5" />
                    <GradientStop Color="#FFCCBC" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>
            <StackLayout Spacing="20" Padding="30">
                <Border WidthRequest="200">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Image Source="image.jpg" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="200"/>
                </Border>
                <Label Text="Quick Pick" TextColor="#388E3C" FontSize="40" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Skip the Queue,
               Grag Your Goods" FontSize="40" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Your fast track to fresh groceries. Order ahead collect in minutes" FontSize="30" HorizontalOptions="Center" VerticalOptions="End"/>
                <Border WidthRequest="{OnPlatform Android='300', iOS='300', Default='400'}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <Button TextColor="White" BackgroundColor="#66BB6A" Text="Get Started" 
                        FontAttributes="Bold" FontSize="30" WidthRequest="{OnPlatform Android='300', iOS='300', Default='400'}" 
                        HorizontalOptions="Center"
                        Clicked="Button_Clicked"/>
                </Border>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>