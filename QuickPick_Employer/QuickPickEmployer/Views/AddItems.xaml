<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPick_Employer.QuickPickEmployer.Views.AddItems"
             xmlns:mvvm="clr-namespace:QuickPick_Employer.QuickPickEmployer.ViewModel"
             Title="AddItems" BackgroundColor="WhiteSmoke"
             x:DataType="mvvm:ItemViewModel">
    <ScrollView>
        <StackLayout Spacing="10" Padding="30">
            <Label Text="{Binding Heading}" FontSize="30" FontAttributes="Bold" 
            HorizontalOptions="Center" >
                <Label.Shadow>
                    <Shadow Brush="Black"
                    Opacity="0.5"
                    Radius="10"
                    Offset="10,10" />
                </Label.Shadow>
            </Label>
            <Label Text="Add your items so that your custormers can skip the queue and grab there goods in minutes." 
            FontSize="20" FontAttributes="Bold" HorizontalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black"
                    Opacity="0.5"
                    Radius="10"
                    Offset="10,10" />
                </Label.Shadow>
            </Label>
            <HorizontalStackLayout Spacing="25" Padding="15">
                <Border BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                        Opacity="0.5"
                        Radius="10"
                        Offset="10,10" />
                    </Border.Shadow>
                    <Grid>
                        <StackLayout Spacing="10" Padding="10">
                            <Label Text="Add an image to make your Item more visual" FontSize="30"/>
                            <Image Source="{Binding ItemImageUrl}" BackgroundColor="{Binding ItemImageUrlColor}" HeightRequest="400" Aspect="AspectFill"/>
                            <Label Text="{Binding ItemImageUrlError}" TextColor="Red" FontSize="20"/>
                            <Border WidthRequest="400">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="25"/>
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                         Opacity="0.5"
                                         Radius="10"
                                         Offset="10,10" />
                                </Border.Shadow>
                                <Button TextColor="White" BackgroundColor="#66BB6A" Text="Add Item Image" FontAttributes="Bold" FontSize="30" WidthRequest="400" HorizontalOptions="Center"
                                         Command="{Binding GetImageCommand}"/>
                            </Border>
                        </StackLayout>
                    </Grid>
                </Border>
                <StackLayout Spacing="15" Padding="10">
                    <Border BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                            Opacity="0.5"
                            Radius="10"
                            Offset="10,10" />
                        </Border.Shadow>
                        <StackLayout WidthRequest="500" Spacing="10" Padding="10">
                            <Label Text="Item Name" FontSize="30" />
                            <Border WidthRequest="450" HorizontalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Entry Placeholder="Item Name" Text="{Binding ItemName}" PlaceholderColor="{Binding ItemNameColor}" HorizontalTextAlignment="Center"
                            x:Name="itemNameEntry" WidthRequest="450" FontSize="30"/>
                            </Border>
                            <Label Text="{Binding ItemNameError}" TextColor="Red" FontSize="20"/>
                        </StackLayout>
                    </Border>
                    <Border IsVisible="False" x:Name="itesmCollection" BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                             Opacity="0.5"
                             Radius="10"
                             Offset="10,10" />
                        </Border.Shadow>
                        <Grid HeightRequest="100">
                            <CollectionView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Spacing="10">
                                            <Label x:Name="lblItemName" FontSize="20"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </Border>
                    <Border BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                            Opacity="0.5"
                            Radius="10"
                            Offset="10,10" />
                        </Border.Shadow>
                        <StackLayout WidthRequest="500" Spacing="10" Padding="10">
                            <Label Text="Description" FontSize="30" />
                            <Border WidthRequest="450" HorizontalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Entry Placeholder="Item Description" HorizontalTextAlignment="Center"
                                       Text="{Binding ItemDescription}" PlaceholderColor="{Binding ItemDescriptionColor}" WidthRequest="450" FontSize="30"/>
                            </Border>
                            <Label Text="{Binding ItemDescriptionError}" TextColor="Red" FontSize="20"/> 
                        </StackLayout>
                    </Border>
                    <Border BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                            Opacity="0.5"
                            Radius="10"
                            Offset="10,10" />
                        </Border.Shadow>
                        <StackLayout WidthRequest="500" Spacing="10" Padding="10">
                            <Label Text="Price" FontSize="30" />
                            <Border WidthRequest="450" HorizontalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Entry Placeholder="Item Price" HorizontalTextAlignment="Center"
                                      Text="{Binding ItemPrice}" PlaceholderColor="{Binding ItemPriceColor}" WidthRequest="450" FontSize="30"/>
                            </Border>
                            <Label Text="{Binding ItemPriceError}" TextColor="Red" FontSize="20"/>
                        </StackLayout>
                    </Border>
                    <Border BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                                Opacity="0.5"
                                Radius="10"
                                Offset="10,10" />
                        </Border.Shadow>
                        <StackLayout WidthRequest="500" Spacing="10" Padding="10">
                            <Label Text="Quantity" FontSize="30" />
                            <Border WidthRequest="450" HorizontalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Entry Placeholder="Item Quantity" HorizontalTextAlignment="Center"
                               Text="{Binding Quantity}" PlaceholderColor="{Binding QuantityColor}" WidthRequest="450" FontSize="30"/>
                            </Border>
                            <Label Text="{Binding QuantityError}" TextColor="Red" FontSize="20"/>
                        </StackLayout>
                    </Border>
                </StackLayout>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Border WidthRequest="400">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                         Opacity="0.5"
                         Radius="10"
                         Offset="10,10" />
                    </Border.Shadow>
                    <Button TextColor="White" BackgroundColor="#66BB6A" Text="Add Item" FontAttributes="Bold" FontSize="30" WidthRequest="400" HorizontalOptions="Center"
                      Command="{Binding AddItemCommand}"/>
                </Border>
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>