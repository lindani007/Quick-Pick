<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPick_Employer.QuickPickEmployer.Views.Home"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:mvvm="clr-namespace:QuickPick_Employer.QuickPickEmployer.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Home" BackgroundColor="WhiteSmoke" 
             x:DataType="mvvm:HomeViewModel" Loaded="ContentPage_Loaded">
    <ScrollView>
        <StackLayout Spacing="15">
            <Label Text="Your Invertory Break Down" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,40,0,20">
                <Label.Shadow>
                    <Shadow Brush="Black"
                Opacity="0.5"
                Radius="10"
                            
                Offset="10,10" />
                </Label.Shadow>
            </Label>
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Border BackgroundColor="White" WidthRequest="300">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                        Opacity="0.5"
                        Radius="10"
                        Offset="10,10" />
                    </Border.Shadow>
                    <StackLayout Spacing="10" WidthRequest="100" HeightRequest="100"  HorizontalOptions="Center">
                        <Label Text="Orders Placed" FontSize="20" FontAttributes="Bold"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <Label Text="{Binding TotalOrders}" FontSize="15" x:Name="totalCost" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </StackLayout>
                </Border>
                <Border BackgroundColor="White" WidthRequest="300">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                    Opacity="0.5"
                    Radius="10"
                    Offset="10,10" />
                    </Border.Shadow>
                    <StackLayout Spacing="10" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center">
                        <Label Text="Today's Income" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <Label Text="{Binding Total}" FontSize="15" x:Name="totalIncome" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </StackLayout>
                </Border>
                <Border BackgroundColor="White" WidthRequest="300">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                    Opacity="0.5"
                    Radius="10"
                    Offset="10,10" />
                    </Border.Shadow>
                    <StackLayout Spacing="10" WidthRequest="120" HeightRequest="120" HorizontalOptions="Center">
                        <Label Text="Items Need To Be Added" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <Label Text="{Binding TotalItems}" FontSize="15" x:Name="totalProfi" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </StackLayout>
                </Border>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20" Padding="15" HorizontalOptions="Center">
                <StackLayout Spacing="15"   Padding="15">
                    <Border BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                    Opacity="0.5"
                    Radius="10"
                    Offset="10,10" />
                        </Border.Shadow>
                        <Grid>
                            <ScrollView>
                                <StackLayout Spacing="10" Padding="15" WidthRequest="365">
                                    <Label Text="Items Left Chart" FontAttributes="Bold" FontSize="Header"/>
                                    <Label Text="Items left in asceding order" FontSize="Subtitle"/>
                                    <ScrollView Orientation="Horizontal">
                                        <StackLayout>
                                            <charts:ChartView Chart="{Binding ItemsChart}"  HeightRequest="350" WidthRequest="350"/>
                                        </StackLayout>
                                    </ScrollView>
                                    <Grid HeightRequest="50">
                                        <ScrollView>
                                            <CollectionView ItemsSource="{Binding LeastItems}" SelectedItem="{Binding SelectedItem}"
                                                            SelectionMode="Single" SelectionChangedCommand="{Binding GetSelected}" HeightRequest="70">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackLayout>
                                                            <Label Text="{Binding .}" FontSize="30"/>
                                                        </StackLayout>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </ScrollView>
                                    </Grid>
                                </StackLayout>
                            </ScrollView>
                        </Grid>
                    </Border>
                    <Border BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"
                            Opacity="0.5"
                            Radius="10"
                            Offset="10,10" />
                        </Border.Shadow>
                        <Grid>
                            <StackLayout Spacing="10" Padding="15" WidthRequest="365">
                                <Label Text="Orders Chart" FontAttributes="Bold" FontSize="Header"/>
                                <ScrollView Orientation="Horizontal">
                                    <StackLayout WidthRequest="1000">
                                        <charts:ChartView Chart="{Binding OrdersChart}" WidthRequest="1000" HeightRequest="350"/>
                                    </StackLayout>
                                </ScrollView>
                            </StackLayout>
                        </Grid>
                    </Border>
                </StackLayout >
                <Border BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                        Opacity="0.5"
                        Radius="10"
                        Offset="10,10" />
                    </Border.Shadow>
                    <Grid>
                        <StackLayout Spacing="10" Padding="15" BackgroundColor="White">
                            <Picker Title="Display Income As : " WidthRequest="300" HorizontalOptions="Start" 
                                    SelectedItem="{Binding SelectedChart}" >
                                <Picker.Items>
                                    <x:String>Pie Chart</x:String>
                                    <x:String>Bar Chart</x:String>
                                    <x:String>Line Chart</x:String>
                                    <x:String>Half Radial Gauge Chart</x:String>
                                </Picker.Items>
                            </Picker>
                            <Label Text="Income Chart" FontAttributes="Bold" FontSize="Header"/>
                            <ScrollView Orientation="Horizontal">
                                <StackLayout>
                                    <charts:ChartView Chart="{Binding HoursIncomeChart}" HeightRequest="700" WidthRequest="900"/>
                                </StackLayout>
                            </ScrollView>
                        </StackLayout>
                    </Grid>
                </Border>
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>